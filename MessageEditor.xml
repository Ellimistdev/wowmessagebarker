	<Frame name="MessageEditorTemplate" mixin="MessageEditorMixin" virtual="true">
		<Layers>
			<Layer level="BORDER">
				<FontString inherits="GameFontHighlightSmall" text="Name:">
					<Anchors>
						<Anchor point="TOPLEFT" x="7" y="-11"/>
					</Anchors>
				</FontString>
				<FontString inherits="GameFontHighlightSmall" text="Message:">
					<Anchors>
						<Anchor point="TOPLEFT" x="7" y="-55"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<EditBox name="$parentNameEditBox" parentKey="NameEditBox" inherits="InputBoxTemplate" autoFocus="false">
				<Anchors>
					<Anchor point="TOPLEFT" x="7" y="-22"/>
				</Anchors>
				<Size x="175" y="22"/>
			</EditBox>
			<EditBox name="$parentMessageEditBox" parentKey="MessageEditBox" multiLine="true" inherits="InputBoxTemplate" autoFocus="false">
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentNameEditBox" y="-26"/>
					<Anchor point="RIGHT" relativePoint="RIGHT" />
				</Anchors>
				<Size x="100" y="100"/>
			</EditBox>
			<Frame parentKey="OutputSelectFrame">
				<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
					<EdgeSize>
						<AbsValue val="16"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="16"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="5" right="5" top="5" bottom="5"/>
					</BackgroundInsets>
				</Backdrop>
				<Anchors>
					<Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="$parentMessageEditBox" y="-26"/>
					<Anchor point="RIGHT" relativePoint="RIGHT" />
				</Anchors>
			</Frame>
			<Button parentKey="SaveButton" inherits="UIPanelButtonTemplate" text="Save">
				<Size x="80" y="22"/>
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
				</Anchors>
				<Scripts>
					<OnClick>
						self:GetParent():SaveMessage()
					</OnClick>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad method="Load"/>
			<OnShow method="OnShow"/>
			<OnHide method="OnHide"/>
			<OnEvent method="OnEvent"/>
			<OnUpdate method="OnUpdate"/>
		</Scripts>
	</Frame>
</Ui>